{
  "name": "advanced-backend-api",
  "version": "1.0.0",
  "description": "Advanced backend API with clean architecture",
  "main": "cmd/web/main.js",
  "scripts": {
    "start": "node cmd/web/main.js",
    "dev": "nodemon cmd/web/main.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "coverage": "jest --coverage && codecov"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/models/db.js",
      "!src/models/testDb.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "express": "^4.21.2",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "codecov": "^3.8.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "express-validator": "^7.2.1",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  }
}
